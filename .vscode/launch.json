{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Agent Service (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.service:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload",
                "--log-level", "debug"
            ],
            "cwd": "${workspaceFolder}/agent",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/agent",
                "ENVIRONMENT": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "django": false,
            "autoReload": {
                "enable": true
            }
        }
    ]
}
